<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GaleriaDeRecursos2.Views.Forms.RadioButtonPage"
             Title="RadioButtonPage">
    <VerticalStackLayout Padding="30">
        <StackLayout>
            <Label 
    x:Name="lblResultado"
    Text="Selecione seu gênero: "
    VerticalOptions="Center" 
    FontSize="18"/>

            <RadioButton Content="Masculino" IsChecked="True" CheckedChanged="RadioButton_CheckedChanged" />
            <RadioButton Content="Feminino" />
            <RadioButton Content="Outro" />
            <RadioButton Content="Prefiro não informar" />
        </StackLayout>


    </VerticalStackLayout>
</ContentPage>